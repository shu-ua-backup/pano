<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">


    <SurfaceView android:id="@+id/prewiew"
                 android:layout_width="wrap_content" android:layout_height="wrap_content">
    </SurfaceView>


    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="horizontal"
     >

      <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/angle_h" android:layout_gravity="top|left"/>

      <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/angle_v" android:gravity="center_horizontal"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/count" android:gravity="top|right"/>

    </LinearLayout>


    <ImageView
            android:id="@+id/photo_btn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/camera_icon_md"
            android:layout_gravity="right"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Старт"
            android:textSize="40dp"
            android:id="@+id/count" android:layout_gravity="bottom|center"/>


</FrameLayout>